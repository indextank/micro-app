{
    "name": "indextank/micro-yii2",
    "description": "Yii 2 Basic Project Template",
    "keywords": ["yii2", "framework", "basic", "project template"],
    "support": {
        "issues": "https://github.com/yiisoft/yii2/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/yii2"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.2.0",
        "yiisoft/yii2": "~2.0.27",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-redis": "^2.0",
        "yiisoft/yii2-queue": "dev-master",
        "yiisoft/yii2-imagine": "~2.0.0",
        "indextank/yii2-plugin-env": "*",
        "overtrue/easy-sms": "^1.0",
        "zhuzhichao/ip-location-zh": "^2.4",
        "phpoffice/phpspreadsheet": "^1.3",
        "fxp/composer-asset-plugin": "^1.4",
        "mobiledetect/mobiledetectlib": "^2.8",
        "jianyan74/yii2-console-migration": "^1.0",
        "insolita/yii2-migration-generator": "~3.1",
        "ramsey/uuid": "^3.7",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-gii": "~2.1.0"
    },
    "config": {
        "process-timeout": 1800,
        "fxp-asset": {
            "enabled": false
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/api/assets": "0777",
                    "web/backend/assets": "0777",
                    "web/frontend/assets": "0777",
                    "yii": "0755"
                }
            ]
        },
        "yii\\composer\\Installer::postInstall": {
            "generateCookieValidationKey": [
                "app/api/config/app.php",
                "app/backend/config/app.php",
                "app/frontend/config/app.php"
            ]
        }
    },
    "repositories": {
        "0": {
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer/"
        },
        "1": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        "packagist": {
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer/"
        }
    }
}
